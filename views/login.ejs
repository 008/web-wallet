<!-- views/login.ejs -->
<!doctype html>
<html lang="en">
	<head>
		<title><%= settings.appTitle %> - Login</title>
		<% include partials/meta %>
	</head>
	<body role="document" class="intro">
		<div id='wrapper'>
			<div id='page-content-wrapper'>
				<div id="main" class="container intro-form" role="main">
					<div class="logo" style="background: url('<%= settings.logo %>') no-repeat top;"><span></span></div>
					<div class="slogan"><%= settings.appSlogan %></div>
					<div class="description"><%= settings.appDescription %></div>
					<h1 class="text-primary"><span class="fa fa-sign-in"></span> <%= settings.appTitle %> - Login</h1>
					<!-- show any messages that come back with authentication -->
					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>
					<!-- LOGIN FORM -->
					<form class="form-horizontal" role="form" action="login" method="post">
						<div class="form-group">
							<div class="col-sm-12">
								<input class="form-control" type="text" name="email" placeholder="Enter the email address you registered with.">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-12">
								<input class="form-control" type="password" name="password" placeholder="Enter your password.">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-10 col-sm-2">
								<button class="btn btn-primary btn-lg" type="submit">Login</button>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-12 text-primary">
								<p>Need an account? <a href="signup">Signup here</a>.</p>
								<p>Or, go back to the <a href="<%= settings.chRoot %>/">Home</a> page.</p>
							</div>
						</div>
					</form>
				</div>
				<% include partials/footer %>
			</div>
		</div>
	</body>
</html>
