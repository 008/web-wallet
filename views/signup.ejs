<!-- views/signup.ejs -->
<!doctype html>
<html lang="en">
	<head>
		<title><%= settings.appTitle %> - Signup</title>
		<% include partials/meta %>
	</head>
	<body role="document" class="intro">
		<div id='wrapper'>
			<div id='page-content-wrapper'>
				<div id="main" class="container intro-form" role="main">
					<div class="logo" style="background: url('<%= settings.logo %>') no-repeat top;"><span></span></div>
					<div class="slogan"><%= settings.appSlogan %></div>
					<div class="description"><%= settings.appDescription %></div>
					<h1 class="text-primary"><span class="fa fa-sign-in"></span> <%= settings.appTitle %> - Signup</h1>
					<!-- show any messages that come back with authentication -->
					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>
					<!-- LOGIN FORM -->
					<form class="form-horizontal" role="form" action="signup" method="post">
						<div class="form-group">
							<div class="col-sm-6">
								<input class="form-control" type="text" name="first_name" placeholder="Enter your first name.">
							</div>
							<div class="col-sm-6">
								<input class="form-control" type="text" name="last_name" placeholder="Enter your last name.">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-12">
								<input class="form-control" type="text" name="email" placeholder="Enter your email address for your login.">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-6">
								<input class="form-control" type="password" name="password" placeholder="Enter a password.">
							</div>
							<div class="col-sm-6">
								<input class="form-control" type="password" name="passwordRepeat" placeholder="Repeat your password.">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-3 col-sm-4">
								<div class="g-recaptcha" data-sitekey="<%= settings.reCaptchaKey %>"></div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-10 col-sm-2">
								<button class="btn btn-primary btn-lg" type="submit">Signup</button>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-12 text-primary">
								<p>Already have an account? <a href="login">Login here</a>.</p>
								<p>Or, go back to the <a href="<%= settings.chRoot %>/">Home</a> page.</p>
							</div>
						</div>
					</form>
				</div>
				<% include partials/footer %>
			</div>
		</div>
	</body>
</html>